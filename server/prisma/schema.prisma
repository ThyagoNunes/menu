generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Patient {
  id      String    @id @default(uuid())
  name    String
  request String
  nameBed String    @unique
  Bed     Bed?      @relation(fields: [nameBed], references: [name])
  Request Request[]

  @@map("patients")
}

model Bed {
  id      String    @id @default(uuid())
  name    String    @unique
  Patient Patient[]

  @@map("beds")
}

model Category {
  id      String    @id @default(uuid())
  name    String    @unique
  Request Request[]

  @@map("categories")
}

model Request {
  id         String   @id @default(uuid())
  name       String
  idPatient  String
  idCategory String
  Patient    Patient  @relation(fields: [idPatient], references: [id])
  Category   Category @relation(fields: [idCategory], references: [id])
}
